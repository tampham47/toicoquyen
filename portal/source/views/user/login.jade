.container
  .row.clearfix
    .col-md-4.col-md-offset-4
      .page-header
        h2 Login

      form(role='form')
        div.form-group
          label(for='exampleInputEmail1') Email address
          input#exampleInputEmail1.form-control(type='email')
        div.form-group
          label(for='exampleInputPassword1') Password
          input#exampleInputPassword1.form-control(type='password')

        div.form-group.pull-right
          a.btn.btn-link(href='#/registration') Registration
          button.btn.btn-default(type='submit') Login

        div.form-group.pull-right
          a.btn.btn-link(href='javascript:;', ng-click='fbLogin()') Facebook Login
          a.btn.btn-link(href='javascript:;', ng-click='getData()') Get Data

